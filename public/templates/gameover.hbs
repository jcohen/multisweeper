<div class="content">
<h2>Board clear!</h2>
{{#index players}}
    <div class="result player-{{color}}">
    {{inc idx}}. <span class="name truncate{{isCurrent .. playerName}}">{{playerName}}</span> <span class="score">{{score}}</score>
    </div>
{{/index}}
<div class="clear"></div>

</div>
